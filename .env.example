# CortexAgent env

# CortexLTM backend
CORTEXLTM_API_BASE_URL=http://127.0.0.1:8000
CORTEXLTM_API_KEY=

# Agent gating
AGENT_TOOLS_ENABLED=true
WEB_SEARCH_ENABLED=true

# Model-based router
AGENT_ROUTER_LLM_ENABLED=true
AGENT_ROUTER_LLM_MODEL=llama-3.1-8b-instant
AGENT_ROUTER_LLM_TIMEOUT_SECONDS=6
GROQ_API_KEY=

# LLM-first multi-step planner (supports Groq Llama defaults and GPT-OSS via openai/openai_compatible provider)
AGENT_PLANNER_LLM_ENABLED=true
AGENT_PLANNER_LLM_PROVIDER=groq
AGENT_PLANNER_LLM_MODEL=llama-3.1-8b-instant
AGENT_PLANNER_LLM_TIMEOUT_SECONDS=8
AGENT_PLANNER_MAX_STEPS=4
AGENT_PLANNER_MIN_CONFIDENCE=0.55
AGENT_DECISION_MODE=llm_only
AGENT_PLANNER_LLM_API_BASE_URL=
AGENT_PLANNER_LLM_API_KEY=

# Pending-confirmation intent classifier (LLM-assisted with deterministic fallback)
AGENT_CONFIRMATION_LLM_ENABLED=true
AGENT_CONFIRMATION_LLM_TIMEOUT_SECONDS=4
AGENT_CONFIRMATION_LLM_MIN_CONFIDENCE=0.72

# Search provider chain (comma-separated): duckduckgo,bing,brave
WEB_SEARCH_PROVIDER=duckduckgo,bing,brave
BRAVE_SEARCH_API_KEY=
WEB_SEARCH_TIMEOUT_SECONDS=8
WEB_SEARCH_MAX_RESULTS=5
WEB_SEARCH_RETRIES=2

# Connected accounts (Supabase PostgREST)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
CONNECTED_ACCOUNTS_TABLE=ltm_connected_accounts
CONNECTED_ACCOUNTS_TIMEOUT_SECONDS=8
CONNECTED_ACCOUNTS_TOKEN_ENCRYPTION_KEY=
SUPABASE_ANON_KEY=

# Google OAuth (for connected apps)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_OAUTH_TIMEOUT_SECONDS=8
GMAIL_ALLOWED_RECIPIENT_DOMAINS=
