# CortexAgent env

# CortexLTM backend
CORTEXLTM_API_BASE_URL=http://127.0.0.1:8000
CORTEXLTM_API_KEY=

# LLM-first planner (required)
AGENT_PLANNER_LLM_PROVIDER=groq
AGENT_PLANNER_LLM_MODEL=llama-3.1-8b-instant
AGENT_PLANNER_LLM_TIMEOUT_SECONDS=8
AGENT_PLANNER_MAX_STEPS=4
AGENT_PLANNER_CONTEXT_MESSAGES=10
AGENT_PLANNER_LLM_API_BASE_URL=
AGENT_PLANNER_LLM_API_KEY=
GROQ_API_KEY=

# Optional synthesis model for tool-result response generation
AGENT_SYNTHESIS_LLM_ENABLED=true
AGENT_SYNTHESIS_LLM_PROVIDER=groq
AGENT_SYNTHESIS_LLM_MODEL=llama-3.1-8b-instant
AGENT_SYNTHESIS_LLM_TIMEOUT_SECONDS=10
AGENT_SYNTHESIS_LLM_API_BASE_URL=
AGENT_SYNTHESIS_LLM_API_KEY=

# Connected accounts (Supabase PostgREST)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
CONNECTED_ACCOUNTS_TABLE=ltm_connected_accounts
CONNECTED_ACCOUNTS_TIMEOUT_SECONDS=8
CONNECTED_ACCOUNTS_TOKEN_ENCRYPTION_KEY=
SUPABASE_ANON_KEY=

# Google OAuth (for connected apps)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_OAUTH_TIMEOUT_SECONDS=8
GMAIL_ALLOWED_RECIPIENT_DOMAINS=
