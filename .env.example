# CortexAgent env

# CortexLTM backend
CORTEXLTM_API_BASE_URL=http://127.0.0.1:8000
CORTEXLTM_API_KEY=

# Agent gating
AGENT_TOOLS_ENABLED=true
WEB_SEARCH_ENABLED=true

# Model-based router
AGENT_ROUTER_LLM_ENABLED=true
AGENT_ROUTER_LLM_MODEL=llama-3.1-8b-instant
AGENT_ROUTER_LLM_TIMEOUT_SECONDS=6
GROQ_API_KEY=

# Search provider chain (comma-separated): duckduckgo,bing,brave
WEB_SEARCH_PROVIDER=duckduckgo,bing,brave
BRAVE_SEARCH_API_KEY=
WEB_SEARCH_TIMEOUT_SECONDS=8
WEB_SEARCH_MAX_RESULTS=5
WEB_SEARCH_RETRIES=2

# Connected accounts (Supabase PostgREST)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
CONNECTED_ACCOUNTS_TABLE=ltm_connected_accounts
CONNECTED_ACCOUNTS_TIMEOUT_SECONDS=8
SUPABASE_ANON_KEY=

# Google OAuth (for connected apps)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
GOOGLE_OAUTH_TIMEOUT_SECONDS=8
